@model GOFWebApp.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1>Create</h1>
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label asp-for="ItemName" class="form-label"></label>
        <input asp-for="ItemName" disabled class="form-control" placeholder="">
    </div>
    <div class="mb-3">
        <label asp-for="ItemType" class="form-label"></label>
        <input asp-for="ItemType" disabled class="form-control" placeholder="">
    </div>
    <div class="mb-3">
        <label asp-for="ItemSize" class="form-label"></label>
        <br />
        <select asp-for="ItemSize" disabled class="form-select" aria-label="Default select example">
            <option selected>Select size</option>
            <option value="XS">XS</option>
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
            <option value="XL">XL</option>
            <option value="One Size">One Size</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="ItemPrice" disabled class="form-label"></label>
        <input asp-for="ItemPrice" disabled class="form-control" placeholder="">
    </div>
    <div class="form-group row">
        <div class="col-8 offset-2 row">
            <div class="col">
                <input type="submit" class="btn btn-danger w-75" value="Delete" />
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-75">Back</a>
            </div>
        </div>
    </div>
</form>