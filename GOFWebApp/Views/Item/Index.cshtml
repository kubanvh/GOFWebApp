@model IEnumerable<GOFWebApp.Models.Item>

<h1>Index - Items</h1>

<div class="container" p-3>
    <div class="col-6 text-left">
        <h2 class="text-primary">Items List</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create new Item</a>
    </div>
        <br />
    @if(Model.Count() >0)
    {
        <table class="table table-striped table-hover" style="width:100%" >
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Item Type
                    </th>
                    <th>
                        Item Size
                    </th>
                    <th>
                        Item Price
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="22%">@item.ItemName</td>
                    <td width="22%">@item.ItemType</td>
                    <td width="18%">@item.ItemSize</td>
                    <td width="18%">@item.ItemPrice</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
            {
                <p>No items in the shop</p>
            }
</div>